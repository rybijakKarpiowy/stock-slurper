generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Items {
  name    String  @db.VarChar
  code    String  @db.VarChar
  link    String  @db.VarChar
  company String  @db.VarChar
  Stock   Stock[]

  @@id([code, company])
}

model Stock {
  created_at DateTime @default(now()) @db.Date
  code       String   @db.VarChar
  amount     Int
  price      Float
  company    String   @db.VarChar
  item       Items    @relation(fields: [code, company], references: [code, company])

  @@id([code, company, created_at])
}
